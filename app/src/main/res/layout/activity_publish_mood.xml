<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.utaustin.yusun.yellerandroid.function_activities.PublishMoodActivity">

    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="To:"
        app:bootstrapBrand="warning"
        app:bootstrapHeading="h3"
        app:roundedCorners="true"

        />
    <com.beardedhen.androidbootstrap.BootstrapButtonGroup
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/label"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/label"
        android:weightSum="3"
        android:checkedButton="@+id/to_public"
        app:bootstrapBrand="warning"
        app:buttonMode="radio"
        app:bootstrapSize="lg"
        app:showOutline="true"
        app:roundedCorners="true"
        android:layout_alignBottom="@+id/label">
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/to_public"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Public"
            />
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/to_friends"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Friends"
            />
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/to_self"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Self"
            />
    </com.beardedhen.androidbootstrap.BootstrapButtonGroup>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/options"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:lines="5"
        android:gravity="top|start"
        app:bootstrapSize="lg"
        app:bootstrapBrand="info"
        />
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/anonymous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:text="Anonymous"
        app:bootstrapSize="lg"
        app:buttonMode="checkbox"
        app:bootstrapBrand="danger"
        app:showOutline="true"
        app:roundedCorners="true"
        />
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/publish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anonymous"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/anonymous"
        android:text="Publish!"
        app:bootstrapSize="lg"
        app:bootstrapBrand="info"
        app:showOutline="false"
        app:roundedCorners="true"
        />
</RelativeLayout>
