<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="6.5"
    tools:context="edu.utaustin.yusun.yellerandroid.function_activities.UploadImageActivity">

    <!--<ImageView-->
        <!--android:id="@+id/imageView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="5"-->

        <!--android:contentDescription="sample" />-->

    <com.beardedhen.androidbootstrap.BootstrapThumbnail
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        app:bootstrapBrand="info"
        app:hasBorder="true"
        />
    <EditText
        android:id="@+id/pictureTags"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.29"
        android:hint="What do you want to say..."
        android:inputType="text"
        android:imeOptions="actionSend" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/upload_button"
        android:text="Upload this picture"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_weight="1"
        android:layout_gravity="center_vertical|center_horizontal"
        android:onClick="upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>
</LinearLayout>
