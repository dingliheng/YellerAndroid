<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.utaustin.yusun.yellerandroid.friends_activities.FriendPageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/follow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/feed_item_padding_left_right"
                android:text="   Follow   "
                app:bootstrapBrand="danger"
                app:bootstrapSize="lg"
                app:buttonMode="checkbox"
                app:showOutline="true"
                app:roundedCorners="true"
                />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/reserved_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/feed_item_padding_left_right"
                android:text="Comment"
                app:bootstrapBrand="info"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="true"
                app:roundedCorners="true"
                />

        </LinearLayout>
        <edu.utaustin.yusun.yellerandroid.function_activities.PullToRefreshListView
            android:id="@+id/pull_to_refresh_listview"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:cacheColorHint="@android:color/white" />
    </LinearLayout>
</RelativeLayout>
